@model Maloncos.Models.ClientsModel

@{
    ViewBag.Title = "CreateClient";
}

<h2>CreateClient</h2>
@using (Html.BeginForm("CreateClient", "Home", FormMethod.Post,new { enctype = "multipart/form-data"}))

{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Clients</legend>
       
        <div class="editor-label">
            @Html.LabelFor(model => model.Nom_Client)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nom_Client)
            @Html.ValidationMessageFor(model => model.Nom_Client)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Prenom_Client)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Prenom_Client)
            @Html.ValidationMessageFor(model => model.Prenom_Client)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Adresse)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Adresse)
            @Html.ValidationMessageFor(model => model.Adresse)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Code_postal)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Code_postal)
            @Html.ValidationMessageFor(model => model.Code_postal)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Genre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Genre)
            @Html.ValidationMessageFor(model => model.Genre)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Email_Client)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email_Client)
            @Html.ValidationMessageFor(model => model.Email_Client)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>
       
        <p>
            <input type="submit" value="Envoyer" />
        </p>
    </fieldset>
}
