@using Microsoft.AspNet.Identity
@using SenRevue.Helpers;
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="senrevue nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink(LabelHelpers.GetLabel("hello_label") +" "+ User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">@LabelHelpers.GetLabel("disconnect_label")</a></li>
    </ul>
    }
}
