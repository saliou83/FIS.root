@model SenRevue.Areas.Admin.Models.ViewModel.ArticleViewModel
@using SenRevue.Helpers;
@{ 
    string headerText = Model.IsAddForm ? LabelHelpers.GetLabel("add_new_article_popup_title")
        : LabelHelpers.GetLabel("detail_article_popup_title");
}

<!-- Modal -->
<div class="modal fade" id="modalNews" role="dialog">
    <div class="modal-dialog  modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Html.Raw(headerText)</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button id="btnSaveArticle" type="button" class="btn btn-success">
                    <span class="fa fa-save" aria-hidden="true"></span>
                    @LabelHelpers.GetLabel("commons_save")
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <span class="fa fa-times" aria-hidden="true"></span>
                    @LabelHelpers.GetLabel("commons_close")
                </button>
            </div>
        </div>

    </div>
</div>
